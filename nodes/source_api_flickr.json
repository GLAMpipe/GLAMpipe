{
	"nodeid": "source_api_flickr",
	"type": "source",
	"subtype": "API",
	"title": "Flickr",
	"usage":"",
	"description": "Import from Flickr (requires an API key)",
	
	"scripts": {
		"hello": "out.say('news', 'You added a Flickr import node'); ",
        "bye": "out.say('finish', 'This does NOT remove data. Bye!'); ",
		
		"init":	[
				"if(context.node.settings.apikey == '') { ",
				"    out.say('error', 'You must give an API key!'); ",
				"} else {",
				"    var base_url = 'https://api.flickr.com/services/rest/?method=flickr.photosets.getPhotos';",
				"    var format = '&extras=url_sq,url_m,url_o,description,license,date_taken,date_upload&format=json&nojsoncallback=?';",
				"    out.url = base_url + '&photoset_id=' + context.node.params.album + format + '&api_key=' + context.node.settings.apikey;",
				"    out.say('news', out.url); ",
				"}"
				],
		"run":
		[
			"if (context.data.fail) { ",
			"    out.say('error', context.data.message); ",
			"    out.value = context.data.message; ",
			"} else { ",
			"    /* make description accessible as a plain string instead of object  */",
			"    for (var i=0; i < context.data.photoset.photo.length; i++) { ",
			"        context.data.photoset.photo[i].description_str = context.data.photoset.photo[i].description._content; ",
			"    }",
			"    out.value = context.data.photoset.photo;",
			"}"
		],
		"finish":"out.say('finish', 'Flickr images fetched to' + context.node.params.collection); "
	},
	
	"views": {
		"data_static":
		[
			"<button data-bind=\"click: prevPage\">prev</button>",
			"<button data-bind=\"click: nextPage\">next</button>",
			"<div id=\"node_bar\" class=\"selected\">",
			"    <h2 class=\"selected\">Flickr data set</h2>",
			"</div>",
			"<div>",
			"    <table>",
			"        <thead>",
			"            <tr>",
			"                <th id=\"vcc\" data-bind=\"click: sort\">[count]</th>",
			"                <th id=\"id\" data-bind=\"click: sort\">id</th>",
			"                <th id=\"image\" >image</th>",
			"                <th id=\"title\" >title</th>",
			"                <th id=\"description\" >description</th>",
			"                <th id=\"date_taken\" >date taken</th>",
			"                <th id=\"date_taken\" >original</th>",
			"            </tr>",
			"        </thead>",
			"        <tbody data-bind=\"foreach: collection\">",
			"            <tr>",
			"                <td data-bind=\"text: vcc\"></td>",
			"                <td data-bind=\"text: id\"></td>",
			"                <td > <img data-bind=\"attr:{src: url_sq}\"></img> </td>",
			"                <td data-bind=\"text: title\"></td>",
			"                <td data-bind=\"text: description._content\"></td>",
			"                <td data-bind=\"text: datetaken\"></td>",
			"                <td><a data-bind=\"attr:{href: url_o}\">link</a></td>",
			"                <! -- show details if image details node is run -->",
			"                <!-- ko if: $data.hasOwnProperty(\"id_photo_details\") -->",
			"                    <td data-bind=\"text: id_photo_details.description._content\"></td>",
			"                <!-- /ko --> ",
			"            </tr> ",
			"        </tbody> ",
			"    </table>",
			"</div>"
		],
		"params":
		[
			"<label>title</label>",
			"<input type=\"text\" name=\"title\" id=\"title\"/>",
			"<label>Album ID</label>",
			"<input type=\"text\" name=\"album\" id=\"album\" required />"
		],
		"settings":
		[
			"<label>Flickr API key </label>",
			"<input type=\"text\" name=\"apikey\" id=\"apikey\" />"
		]
	}
}
