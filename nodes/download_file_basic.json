{
    "nodeid": "download_file_basic",
    "type": "download",
    "subtype": "basic",
    "title": "file",
    "description": "Download file from URL.",


    "scripts": {
        "hello": "out.say('news', 'You added a download node'); ",
        "bye": "out.say('news', 'Deleted donwload node. Downloaded files will remain. Bye!'); ",
        "init":"out.say('progress', 'Starting downloads...'); ",
        "run": [
                "out.value = context.doc[context.node.params.field]",
                "out.say('progress', context.doc[context.node.params.field])"
                ],
        "finish":"out.say('finish', 'Downloaded');"
    },
    
    "views": {
        "params":[
                    "<label>input field</label><input name=\"field\"/>"
                    ],
        "settings": [
                    "no settings"
                    ]
    }
}
